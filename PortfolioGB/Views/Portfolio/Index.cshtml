@model IEnumerable<PortfolioGB.Models.Portfolio>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Work";
}

<h2>Work</h2>
<h3>@ViewBag.Message</h3>
@if (Request.IsAuthenticated)
{
 <p>
    @Html.ActionLink("Create New", "Create")
 </p>
}
<div class="row">

        @foreach (var item in Model)
{
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 workcontainer">

        <img src="@Html.DisplayFor(modelItem => item.Image)" height="150" />

        <h4>@Html.DisplayFor(modelItem => item.Title)</h4>

        <p>@Html.DisplayFor(modelItem => item.About)</p>

        <a href="http://@Html.DisplayFor(modelItem => item.Link)" target="_blank">Check it out!</a>
        <hr />
        @if (Request.IsAuthenticated)
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
            <span> - </span>
            @Html.ActionLink("Details", "Details", new { id = item.ID })
            <span> - </span>
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        }
        
    </div>
}

</div>
